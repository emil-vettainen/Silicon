@model SignUpViewModel

@{
    ViewData["Title"] = "Register";
}

<section id="signup">
    <div class="container">
        <form method="post" asp-controller="Authentication" asp-action="SignUp" novalidate>
            <h1>Create Account</h1>
            <p>Already have an account? <a asp-action="SignIn">Sign in here.</a></p>

            @if (Model.ErrorMessage != null)
            {
                <div class="error-message">
                    @Model.ErrorMessage
                </div>
            }

            <div class="content">

                <div id="form-firstname" class="input-group">
                    <label asp-for="SignUp.FirstName"></label>
                    <input asp-for="SignUp.FirstName" class="form-control" />
                    <span asp-validation-for="SignUp.FirstName" class="invalid-feedback"></span>
                </div>

                <div id="form-lastname" class="input-group">
                    <label asp-for="SignUp.LastName"></label>
                    <input asp-for="SignUp.LastName" class="form-control" />
                    <span asp-validation-for="SignUp.LastName" class="invalid-feedback"></span>
                </div>

                <div id="form-email" class="input-group">
                    <label asp-for="SignUp.Email"></label>
                    <input asp-for="SignUp.Email" class="form-control" />
                    <span asp-validation-for="SignUp.Email" class="invalid-feedback"></span>
                </div>

                <div id="form-password" class="input-group">
                    <label asp-for="SignUp.Password"></label>
                    <input asp-for="SignUp.Password" class="form-control" />
                    <span asp-validation-for="SignUp.Password" class="invalid-feedback"></span>
                </div>

                <div id="form-confirm" class="input-group">
                    <label asp-for="SignUp.ConfirmPassword"></label>
                    <input asp-for="SignUp.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="SignUp.ConfirmPassword" class="invalid-feedback"></span>
                </div>

                <div id="form-terms" class="checkbox-group">
                    <input asp-for="SignUp.TermsAndConditions" class="form-check-input" type="checkbox" />
                    <label asp-for="SignUp.TermsAndConditions">I agree to the <a asp-action="Terms">Terms</a> & <a asp-action="Conditions">Conditions</a> </label>
                    <span asp-validation-for="SignUp.TermsAndConditions" class="invalid-feedback"></span>
                </div>

                <button id="form-submit" class="btn-theme-large" type="submit">Sign Up</button>
            </div>
        </form>
    </div>
</section>

@await Html.PartialAsync("~/Views/Shared/_SignUpScriptPartial.cshtml");